<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.whitdan.arkhamhorrorlcgcampaignguide">

    <application
        android:name=".Z_Data.GlobalVariables"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".A_Menus.MainMenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".A_Menus.ChooseCampaignActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".B_CampaignSetup.CampaignIntroductionActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".B_CampaignSetup.CampaignInvestigatorsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".B_CampaignSetup.ChaosBagSetupActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".C_Scenario.ScenarioIntroductionActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".A_Menus.LoadCampaignActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".C_Scenario.ScenarioSetupActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".C_Scenario.ScenarioMainActivity"
            android:parentActivityName=".A_Menus.MainMenuActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".D_Misc.CampaignLogActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".D_Misc.EditTeamActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".D_Misc.ChaosBagActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".C_Scenario.ScenarioResolutionActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".C_Scenario.ScenarioInterludeActivity"
            android:parentActivityName=".A_Menus.MainMenuActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".D_Misc.CampaignFinishedActivity"
            android:parentActivityName=".A_Menus.MainMenuActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".A_Menus.StandaloneActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".A_Menus.SettingsMenuActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".D_Misc.EditStatsActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".D_Misc.EditLogActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".D_Misc.LoadChaosBagActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".D_Misc.CustomChaosBagActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>