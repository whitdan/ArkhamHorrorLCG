<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_screen_bg"
              android:orientation="vertical"
              android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/player_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="@string/player_cards"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textScaleX="1.2"
        android:textSize="20sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/strange_solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:button="@drawable/checkbox_style"
                android:paddingBottom="@dimen/checkbox_padding"
                android:paddingTop="@dimen/checkbox_padding"
                android:text="@string/strange_solution_dialog"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"/>

            <CheckBox
                android:id="@+id/archaic_glyphs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:button="@drawable/checkbox_style"
                android:paddingBottom="@dimen/checkbox_padding"
                android:paddingTop="@dimen/checkbox_padding"
                android:text="@string/archaic_glyphs_dialog"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"/>

            <CheckBox
                android:id="@+id/charons_obol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:button="@drawable/checkbox_style"
                android:paddingBottom="@dimen/checkbox_padding"
                android:paddingTop="@dimen/checkbox_padding"
                android:text="@string/charons_obol_in_play"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"/>

            <LinearLayout
                android:id="@+id/select_investigator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/select_investigator_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_double_margin"
                    android:button="@drawable/checkbox_style"
                    android:paddingBottom="@dimen/checkbox_padding"
                    android:paddingTop="@dimen/checkbox_padding"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/arnopro_textsize"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/select_investigator_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_double_margin"
                    android:button="@drawable/checkbox_style"
                    android:paddingBottom="@dimen/checkbox_padding"
                    android:paddingTop="@dimen/checkbox_padding"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/arnopro_textsize"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/select_investigator_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_double_margin"
                    android:button="@drawable/checkbox_style"
                    android:paddingBottom="@dimen/checkbox_padding"
                    android:paddingTop="@dimen/checkbox_padding"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/arnopro_textsize"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/select_investigator_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_double_margin"
                    android:button="@drawable/checkbox_style"
                    android:paddingBottom="@dimen/checkbox_padding"
                    android:paddingTop="@dimen/checkbox_padding"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/arnopro_textsize"
                    android:visibility="gone"/>

            </LinearLayout>

            <CheckBox
                android:id="@+id/ancient_stone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:button="@drawable/checkbox_style"
                android:paddingBottom="@dimen/checkbox_padding"
                android:paddingTop="@dimen/checkbox_padding"
                android:text="@string/ancient_stone_dialog"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"/>

            <LinearLayout
                android:id="@+id/ancient_stone_counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/checkbox_padding"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/checkbox_padding"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/test_difficulty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/test_difficulty"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/arnopro_textsize"/>

                <ImageView
                    android:id="@+id/test_decrement"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/button_decrement"/>

                <TextView
                    android:id="@+id/test_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/arnopro_textsize"/>

                <ImageView
                    android:id="@+id/test_increment"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/button_increment"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingLeft="-16dp"
        android:paddingRight="-16dp">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_style"
            android:includeFontPadding="false"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            android:textScaleX="1.2"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/okay_button"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_style"
            android:includeFontPadding="false"
            android:text="@string/okay"
            android:textColor="@android:color/black"
            android:textScaleX="1.2"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>