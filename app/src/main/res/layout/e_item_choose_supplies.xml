<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_investigator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/investigator_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textScaleX="1.2"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/supply_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:includeFontPadding="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/arnopro_textsize"/>

    </LinearLayout>

    <TextView
        android:id="@+id/killed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/killed"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="70sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/checkbox_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/provisions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/provisions_choose"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"/>

            <ImageView
                android:id="@+id/provisions_decrement"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/button_decrement"/>

            <TextView
                android:id="@+id/provisions_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"/>

            <ImageView
                android:id="@+id/provisions_increment"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/button_increment"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/checkbox_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/medicine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/medicine_choose"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"/>

            <ImageView
                android:id="@+id/medicine_decrement"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/button_decrement"/>

            <TextView
                android:id="@+id/medicine_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"/>

            <ImageView
                android:id="@+id/medicine_increment"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/button_increment"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/checkbox_padding"
            android:layout_marginLeft="@dimen/checkbox_padding">
            <CheckBox
                android:id="@+id/rope"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_style"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"
                android:text="@string/rope_choose"/>

            <CheckBox
                android:id="@+id/blanket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_style"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"
                android:text="@string/blanket_choose"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/checkbox_padding"
            android:layout_marginLeft="@dimen/checkbox_padding">
            <CheckBox
                android:id="@+id/canteen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_style"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"
                android:text="@string/canteen_choose"/>

            <CheckBox
                android:id="@+id/torches"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_style"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"
                android:text="@string/torches_choose"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/checkbox_padding"
            android:layout_marginLeft="@dimen/checkbox_padding">
            <CheckBox
                android:id="@+id/compass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_style"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"
                android:text="@string/compass_choose"/>

            <CheckBox
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_style"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"
                android:text="@string/map_choose"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/checkbox_padding"
            android:layout_marginLeft="@dimen/checkbox_padding">
            <CheckBox
                android:id="@+id/binoculars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_style"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"
                android:text="@string/binoculars_choose"/>

            <CheckBox
                android:id="@+id/chalk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_style"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"
                android:text="@string/chalk_choose"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/checkbox_padding"
            android:layout_marginLeft="@dimen/checkbox_padding">
            <CheckBox
                android:id="@+id/pendant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/checkbox_style"
                android:textColor="@android:color/black"
                android:textSize="@dimen/arnopro_textsize"
                android:text="@string/pendant_choose"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:src="@drawable/underline"/>
</LinearLayout>